<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentMenuActivity">


    <Button
        android:id="@+id/buttonhistoryAppointment"
        android:layout_width="303dp"
        android:layout_height="93dp"
        android:layout_marginBottom="191dp"
        android:layout_marginEnd="27dp"
        android:background="@color/colorPrimary"
        android:text="Appointment History"
        android:textColor="@color/button_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonrequest"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonrequest"
        android:layout_width="301dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="101dp"
        android:background="@color/colorPrimaryDark"
        android:text="Request an Appointment"
        android:textColor="@color/button_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonhistoryAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
